.column-box {
    margin: 32rpx 32rpx 0rpx;
}

.column-top {
    display: flex;
    height: 50rpx;
    justify-content: space-between;
    line-height: 50rpx;
}

.column-title {
    color: #333;
    font-size: 36rpx;
    font-weight: 700;
    line-height: 50rpx;
}

.column-more {
    color: #999;
    display: flex;
    font-size: 26rpx;
    font-weight: 400;
    height: 50prx;
    line-height: 50rpx;
}

.column-more .image {
    height: 24rpx;
    margin-top: 17rpx;
    vertical-align: middle;
    width: 24rpx;
}

.news-item {
    border-bottom: 1rpx solid #e7eef0;
    display: flex;
    margin: 32rpx 0rpx 0;
    padding-bottom: 32rpx;
}

.news-item:last-child {
    border-bottom: 0rpx;
}

.news-item .left {
    display: flex;
    flex: 1;
    flex-direction: column;
    justify-content: space-around;
}

.news-item .left .title {
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    color: #333;
    display: -webkit-box;
    font-family: PingFangSC-Medium,PingFang SC;
    font-size: 32rpx;
    font-weight: 600;
    line-height: 45rpx;
    overflow: hidden;
}

.news-item .left .time {
    color: #999;
    font-family: PingFangSC-Regular,PingFang SC;
    font-size: 26rpx;
    font-weight: 400;
    line-height: 37rpx;
    margin-top: 24rpx;
}

.news-item .right .right-image {
    border-radius: 20rpx;
    height: 162rpx;
    margin-left: 32rpx;
    width: 252rpx;
}

.news-item .left1 .image1 {
    border-radius: 20rpx;
    height: 162rpx;
    margin-right: 32rpx;
    width: 252rpx;
}

.news-item .right1 {
    display: flex;
    flex: 1;
    flex-direction: column;
    justify-content: space-around;
}

.news-item .right1 .title {
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    color: #333;
    display: -webkit-box;
    font-family: PingFangSC-Medium,PingFang SC;
    font-size: 32rpx;

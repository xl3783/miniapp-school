.top {
  width: 750rpx;
}

.top_bj {
  width: 100%;
}

.top_title {
  position: fixed;
  width: 100%;
  z-index: 100;
}

.top_title_bj {
  float: left;
  width: 100%;
}

.top_title_info {
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  display: -webkit-box;
  font-size: 34rpx;
  font-weight: 600;
  margin: 0 auto;
  overflow: hidden;
  position: relative;
  text-align: center;
  text-overflow: ellipsis;
  width: 55%;
}

.back_png {
  height: 34rpx;
  width: 34rpx;
}

.bacck {
  align-items: center;
  display: flex;
  height: 48rpx;
  justify-content: center;
  left: 20rpx;
  position: absolute;
  width: 60rpx;
  z-index: 1000;
}

.bacck .back_png {
  height: 34rpx;
  width: 18rpx;
}

.top_shool {
  color: #fff;
  font-family: PingFangSC-Medium, PingFang SC;
  font-size: 48rpx;
  font-weight: 500;
  height: 67rpx;
  line-height: 67rpx;
  margin-top: 44rpx;
  text-align: center;
  width: 100%;
}

.top_info {
  display: flex;
  height: 50rpx;
  justify-content: center;
  margin-top: 24rpx;
  width: 100%;
}
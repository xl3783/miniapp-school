./app.wxssbody {
    display: flex;
    flex-direction: column;
    height: 100vh;
}

.relative-box {
    position: relative;
}

.top-search-box {
    position: sticky;
    top: 0;
}

.top-search {
    background: #f6f7f9;
    border-radius: 60rpx;
    box-sizing: border-box;
    display: flex;
    flex: 1;
    height: 88rpx;
    margin: 0 32rpx;
    padding: 23rpx 40rpx 25rpx;
}

.top-search-text {
    color: #333;
    font-size: 30rpx;
    height: 88rpx;
    line-height: 88rpx;
    padding-right: 32rpx;
}

.top-search .img-search {
    height: 36rpx;
    margin-right: 17rpx;
    margin-top: 3rpx;
    width: 36rpx;
}

.top-search .search-text {
    color: #999;
    line-height: 40rpx;
}

.search-box,.top-search .search-text {
    font-family: PingFangSC-Regular,PingFang SC;
    font-size: 28rpx;
    font-weight: 400;
}

.search-box {
    border-bottom: 1rpx solid #e7eef0;
    color: #333;
    height: 100rpx;
    justify-content: space-around;
    line-height: 100rpx;
    overflow: auto;
    white-space: nowrap;
    width: 100%;
}

.search-box,.view-box {
    display: flex;
}

.search-box .x-item,.search-container {
    flex: 1;
}

.search-container {
    background: rgba(0,0,0,.5);
}

.search-item {
    display: flex;
    padding: 0 24rpx;
    position: relative;
}

.elips {
    max-width: 180rpx;
    overflow: hidden;
    text-overflow: ellipsis;
}

.search-item .iconfont {
    color: #ccc;
    font-size: 20rpx;
    margin-left: 3rpx;
}

.search-item.active,.search-item.active .iconfont {
    color: #1487ff;
}

.subject-top-item {
    border-bottom: 1rpx solid #e7eef0;
    color: #333;
    display: flex;
    font-family: PingFangSC-Medium,PingFang SC;
    font-size: 32rpx;
    font-weight: 600;
    height: 112rpx;
    line-height: 112rpx;
    margin: 0 32rpx;
}

.subject-top-item image {
    height: 48rpx;
    margin-right: 32rpx;
    margin-top: 30rpx;
    width: 48rpx;
}

.subject-item {
    color: #333;
    display: flex;
    font-family: PingFangSC-Medium,PingFang SC;
    font-size: 28rpx;
    font-weight: 500;
    height: 104rpx;
    justify-content: space-between;
    line-height: 104rpx;
    margin: 0 32rpx;
}

.subject-item.active {
    color: #1487ff;
}

.admission-line {
    border-bottom: 13rpx solid #f6f7f9;
    border-top: 13rpx solid #f6f7f9;
    box-sizing: border-box;
    padding: 32rpx;
}

.admission-line .name {
    color: #333;
    font-family: PingFangSC-Medium,PingFang SC;
    font-size: 36rpx;
    font-weight: 600;
    line-height: 50rpx;
    margin-bottom: 8rpx;
}

.score {
    color: #666;
    display: flex;
    flex-wrap: wrap;
    font-family: PingFangSC-Regular,PingFang SC;
    font-size: 28rpx;
    font-weight: 400;
    line-height: 40rpx;
}

.score view {
    margin-right: 30rpx;
    margin-top: 24rpx;
    text-align: left;
}

.score view:nth-child(odd) {
    margin-right: 46rpx;
}

.help_item .title {
    border-bottom: 1rpx solid #e7eef0;
    color: #333;
    display: flex;
    font-family: PingFangSC-Medium,PingFang SC;
    font-size: 32rpx;
    height: 112rpx;
    justify-content: space-between;
    line-height: 112rpx;
    margin: 0 32rpx;
}

.help_item .title .title_1 {
    flex: 1;
    font-weight: 600;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    width: 80%;
}

.choose-mask {
    background: rgba(0,0,0,.5);
    left: 0;
    position: fixed;
    right: 0;
    top: 120rpx;
    z-index: 2;
}

.search-title {
    color: #000;
    font-size: 34rpx;
    font-weight: 600;
    line-height: 48rpx;
    margin-bottom: 30rpx;
    padding-top: 64rpx;
    text-align: center;
}

.select-item {
    border-bottom: 1rpx solid #e7eef0;
    height: 110rpx;
    justify-content: space-between;
    line-height: 110rpx;
    margin: 0 32rpx;
}

.select-item,.select-item .picker {
    display: flex;
}

.select-item .picker .picker-text {
    overflow: hidden;
    text-align: right;
    text-overflow: ellipsis;
    white-space: nowrap;
    width: 450rpx;
}

.select-item image {
    height: 36rpx;
    margin-top: 39rpx;
    width: 36rpx;
}

.subject-box {
    display: flex;
    flex-wrap: wrap;
}

.subject-box .subject-item1 {
    background: #f6f7f9;
    border-radius: 20rpx;
    font-size: 32rpx;
    line-height: 45rpx;
    margin-bottom: 20rpx;
    margin-right: 22rpx;
    padding: 30rpx 40rpx;
    text-align: left;
}

.subject-box .subject-item1:last-child {
    margin-right: 0;
}

.reset-btn {
    border: 1rpx solid #333;
    border-radius: 48rpx;
    box-sizing: border-box;
    color: #333;
}

.reset-btn,.sure-btn {
    font-weight: 600;
    height: 96rpx;
    line-height: 96rpx;
    text-align: center;
    width: 290rpx;
}

.sure-btn {
    border-radius: 48rpx;
    color: #fff;
}

.picker-mask {
    background-color: rgba(0,0,0,.3);
    bottom: 0;
    left: 0;
    position: fixed;
    right: 0;
    top: 0;
    z-index: 10;
}

.picker-content {
    background-color: #fff;
    bottom: 0;
    left: 0;
    position: absolute;
    right: 0;
}

.top-btn {
    display: flex;
    font-size: 40rpx;
    justify-content: space-between;
    line-height: 50px;
    padding: 0 30rpx;
}

.top-btn .cancel {
    color: #999;
}

.top-btn .sure {
    color: #07c160;
}

.result-flex {
    display: flex;
    margin: 32rpx;
    width: 686rpx;
}

.scroll-view-item_H {
    display: inline-block;
    width: 100%;
}

.tr {
    display: flex;
    width: 100%;
}

.fixed {
    position: fixed;
}

.bg-w {
    background: snow;
    position: sticky;
    top: 0;
}

.bg-g {
    background: #fbfbfb;
}

.th {
    color: #fff;
}

.td,.th {
    align-items: center;
    border-bottom: 1rpx solid #f0f0f0;
    border-right: 1rpx solid #f0f0f0;
    display: flex;
    flex: 1;
    font-size: 24rpx;
    justify-content: center;
    min-width: 60rpx;
    padding-left: 10rpx;
    padding-right: 10rpx;
}

.max-w {
    min-width: 90rpx;
}

.td:first-child,.th:first-child {
    border-left: 1rpx solid #f0f0f0;
    max-width: 200rpx;
    padding: 15rpx 10rpx;
}

.td:first-child {
    justify-content: flex-start;
}
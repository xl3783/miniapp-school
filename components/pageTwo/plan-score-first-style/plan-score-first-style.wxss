./app.wxss.top-search {
    background: #f6f7f9;
    border-radius: 60rpx;
    box-sizing: border-box;
    display: flex;
    height: 88rpx;
    margin: 0 32rpx;
    padding: 23rpx 40rpx 25rpx;
}

.top-search .img-search {
    height: 36rpx;
    margin-right: 17rpx;
    margin-top: 3rpx;
    width: 36rpx;
}

.top-search .search-text {
    color: #999;
    font-family: PingFangSC-Regular,PingFang SC;
    font-size: 28rpx;
    font-weight: 400;
    line-height: 40rpx;
}

.default-search {
    background-color: #fff;
    border-bottom: 1rpx solid #e7eef0;
    display: flex;
    justify-content: space-between;
    padding: 23rpx 32rpx 23rpx 0;
}

.enroll-plan-default {
    white-space: nowrap;
    width: 85%;
}

.default-search .enroll-plan-item {
    background-color: #f2f2f2;
    border-radius: 28rpx;
    box-sizing: border-box;
    color: #333;
    display: inline-block;
    font-size: 28rpx;
    height: 56rpx;
    line-height: 56rpx;
    margin: 0 15rpx;
    overflow: hidden;
    padding: 0 36rpx;
    text-align: center;
    text-overflow: ellipsis;
}

.default-search .enroll-plan-search {
    color: #999;
    display: flex;
    font-size: 28rpx;
    margin-top: 7rpx;
}

.default-search .enroll-plan-search image {
    height: 36rpx;
    width: 36rpx;
}

.blue-bg {
    background: linear-gradient(180deg,#2ba7ff,#1487ff);
    border-radius: 20rpx;
    box-shadow: 0 8rpx 18rpx 0 rgba(20,135,255,.28);
    height: 132rpx;
    justify-content: space-around;
    margin: 32rpx auto;
    width: 686rpx;
}

.blue-bg,.blue-bg .blue-item {
    display: flex;
}

.blue-bg .blue-item {
    align-items: center;
    text-align: center;
}

.blue-item-num {
    color: #fff;
    font-size: 42rpx;
    margin-left: 24rpx;
}

.blue-item-name {
    color: hsla(0,0%,100%,.6);
    font-size: 30rpx;
}

.plan-item,.plan-list {
    background-color: #fff;
}

.plan-item {
    align-items: center;
    border-bottom: 1rpx solid #e7eef0;
    display: flex;
    justify-content: space-between;
    margin: 0 32rpx;
    padding: 32rpx 0;
}

.plan-item .plan-item-text {
    color: #333;
    flex: 1;
    font-size: 32rpx;
    font-weight: 600;
    line-height: 45rpx;
}

.plan-item .top-icon {
    height: 36rpx;
    vertical-align: middle;
    width: 36rpx;
}

.plan-item-detail {
    background-color: #f3f5f8;
    box-sizing: border-box;
    display: flex;
    flex-wrap: wrap;
    font-size: 32rpx;
    line-height: 60rpx;
    padding: 32rpx 0;
}

.batch-num,.plan-num {
    color: #666;
}

.plan-num {
    margin-left: 46rpx;
}

.admission-line {
    border-bottom: 13rpx solid #f6f7f9;
    border-top: 13rpx solid #f6f7f9;
    box-sizing: border-box;
    padding: 32rpx;
}

.fixed-admission-line {
    padding-top: 120rpx!important;
}

.admission-line .name {
    color: #333;
    font-family: PingFangSC-Medium,PingFang SC;
    font-size: 36rpx;
    font-weight: 600;
    line-height: 50rpx;
    margin-bottom: 8rpx;
}

.score {
    color: #666;
    display: flex;
    flex-wrap: wrap;
    font-family: PingFangSC-Regular,PingFang SC;
    font-size: 28rpx;
    font-weight: 400;
    line-height: 40rpx;
}

.score view {
    margin-right: 30rpx;
    margin-top: 24rpx;
    text-align: left;
}

.score view:nth-child(odd) {
    margin-right: 46rpx;
}

.help_item .title {
    border-bottom: 1rpx solid #e7eef0;
    color: #333;
    display: flex;
    font-family: PingFangSC-Medium,PingFang SC;
    font-size: 32rpx;
    height: 112rpx;
    justify-content: space-between;
    line-height: 112rpx;
    margin: 0 32rpx;
}

.help_item .title .title_1 {
    flex: 1;
    font-weight: 600;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    width: 80%;
}
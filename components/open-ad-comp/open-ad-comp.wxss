.open-ad {
    background-color: #fff;
    bottom: 0;
    display: flex;
    flex-direction: column;
    left: 0;
    position: fixed;
    right: 0;
    top: 0;
    z-index: 150;
}

.open-ad .ad-banner {
    flex: 1;
    position: relative;
}

.open-ad .ad-banner .count {
    background: rgba(0,0,0,.15);
    border: 1rpx solid hsla(0,0%,100%,.25);
    border-radius: 36rpx;
    height: 64rpx;
    left: 34rpx;
    line-height: 64rpx;
    top: 104rpx;
    width: 140rpx;
}

.open-ad .ad-banner .count,.open-ad .ad-banner .skip {
    color: #fff;
    font-size: 28rpx;
    position: absolute;
    text-align: center;
}

.open-ad .ad-banner .skip {
    background: rgba(0,0,0,.5);
    border-radius: 36rpx;
    bottom: 32rpx;
    height: 72rpx;
    line-height: 72rpx;
    padding: 0 42rpx;
    right: 32rpx;
}

.open-ad .ad-content {
    align-items: center;
    background-color: #fff;
    display: flex;
    flex-direction: column;
    height: 272rpx;
}

.schoollogo {
    margin-bottom: 20rpx;
    margin-top: 52rpx;
    width: 110rpx;
}

.schoolname {
    color: #333;
    font-size: 32rpx;
    text-align: center;
}

.popup-ad {
    align-items: center;
    background: rgba(0,0,0,.65);
    bottom: 0;
    display: flex;
    flex-direction: column;
    left: 0;
    position: fixed;
    right: 0;
    top: 0;
    z-index: 130;
}

.popup-ad-box {
    height: 950rpx;
    left: 50%;
    position: absolute;
    top: 50%;
    transform: translate(-50%,-50%);
}

.popup-ad .ad-img {
    border-radius: 20rpx;
    height: 768rpx;
    width: 540rpx;
}

.close-img {
    height: 88rpx;
    margin: 96rpx 226rpx 0;
    width: 88rpx;
}

.ad-get-phone {
    height: 100vh;
    left: 0;
    opacity: 0;
    position: fixed;
    top: 0;
    width: 750rpx!important;
}
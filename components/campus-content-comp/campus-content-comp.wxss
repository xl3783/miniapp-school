.item {
    height: 72rpx;
    justify-content: space-between;
    line-height: 72rpx;
    margin-bottom: 56rpx;
    margin-left: 56rpx;
    margin-right: 48rpx;
}

.item,.item .left {
    display: flex;
}

.icon-right {
    height: 36rpx;
    margin-top: 18rpx;
    width: 36rpx;
}

.item .left .icon {
    height: 72rpx;
    margin-right: 52rpx;
    width: 72rpx;
}

.grid-item {
    align-items: center;
    color: #333;
    display: flex;
    flex-direction: column;
    float: left;
    font-family: PingFangSC-Regular,PingFang SC;
    font-size: 26rpx;
    font-weight: 400;
    line-height: 37rpx;
    margin-bottom: 72rpx;
    text-align: center;
    width: 33.33%;
}

.grid-item .icon {
    display: block;
    height: 96rpx;
    margin-bottom: 20rpx;
    width: 96rpx;
}

.campus-item-text {
    font-size: 32rpx;
    margin: 0rpx;
}

.grid-item .campus-item-text {
    font-size: 26rpx;
    margin: 0rpx;
}
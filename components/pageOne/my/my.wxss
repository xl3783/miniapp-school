.top-flex {
  background: transparent;
  box-sizing: border-box;
  display: flex;
  font-weight: 400;
  justify-content: space-between;
  margin: 0 !important;
  padding: 32rpx 40rpx 84rpx;
  width: 750rpx !important;
}

.top-flex .username {
  background: transparent;
  color: #333;
  font-size: 48rpx !important;
  font-weight: 500;
  line-height: 1;
  margin: 18rpx 0 0 !important;
  max-width: 390rpx;
  padding: 0 !important;
  text-align: left;
}

.username::after {
  border: 0;
  display: none;
}

.top-flex .info {
  color: #999;
  font-size: 30rpx;
  margin-top: 14rpx;
  text-align: left;
}

.top-flex .avatar {
  border-radius: 50%;
  height: 140rpx;
  margin-right: 24rpx;
  width: 140rpx;
}

.flex-item {
  background: transparent;
  box-sizing: border-box;
  display: flex;
  font-weight: 400;
  justify-content: space-between;
  line-height: 48rpx;
  margin: 0 !important;
  padding: 44rpx 40rpx;
  width: 750rpx !important;
}

.flex-item .icon {
  height: 48rpx;
  margin-right: 42rpx;
  width: 48rpx;
}

.flex-item .right {
  height: 36rpx;
  width: 36rpx;
}

.footer {
  color: #999;
  display: flex;
  font-family: PingFangSC-Regular, PingFang SC;
  font-size: 22rpx;
  font-weight: 400;
  height: 30rpx;
  left: 50%;
  line-height: 30rpx;
  margin: 30rpx auto;
  position: absolute;
  text-align: center;
  transform: translate(-50%);
}

.footer .footer-img {
  height: 24rpx;
  margin-right: 10rpx;
  margin-top: 3rpx;
  width: 30rpx;
}

.alumni_certification {
  align-items: center;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  margin: 0 0 22rpx;
  min-height: 120rpx;
  padding: 28rpx 72rpx;
  position: relative;
}

.alumni_certification .alumni_bg {
  height: 100%;
  position: absolute;
  width: 100%;
}

.alumni_certification .logo {
  border-radius: 50%;
  flex-shrink: 0;
  height: 64rpx;
  margin-right: 24rpx;
  vertical-align: middle;
  width: 64rpx;
}

.alumni_certification text {
  color: #fff;
  font-size: 28rpx;
  font-weight: 600;
  line-height: 40rpx;
  margin-right: 10rpx;
}

.authentication {
  align-items: center;
  background: #fff;
  border: 1rpx solid #fff;
  border-radius: 28rpx;
  box-shadow: 0 4rpx 10rpx 4rpx rgba(32, 47, 103, .51), inset 0 0 10rpx 14rpx #fff;
  box-sizing: border-box;
  display: flex;
  flex-shrink: 0;
  height: 48rpx;
  justify-content: center;
  width: 108rpx;
}

.authentication .verify_img {
  height: 32rpx;
  width: 68rpx;
}

.information {
  box-sizing: border-box;
  display: flex;
  height: 100rpx;
  justify-content: flex-end;
  padding-right: 20rpx;
  padding-top: 20rpx;
  position: absolute;
  right: 30rpx;
  top: 30rpx;
  width: 100rpx;
  z-index: 100;
}

.information image {
  height: 48rpx;
  width: 48rpx;
}

.information .dot {
  background: #ff3f30;
  border-radius: 50%;
  height: 20rpx;
  position: absolute;
  right: 0;
  top: 0;
  transform: translate(25%, -10%);
  width: 20rpx;
}

.avatar_box {
  border-radius: 50%;
  height: 140rpx;
  margin-right: 24rpx;
  overflow: hidden;
  position: relative;
  width: 140rpx;
}

.perfect {
  background-color: rgba(0, 0, 0, .3);
  bottom: 0;
  color: #fff;
  font-size: 26rpx;
  height: 60rpx;
  line-height: 42rpx;
  position: absolute;
  width: 140rpx;
}
./app.wxss.top-nav {
    border-bottom: 1rpx solid #e7eef0;
    height: 100rpx;
}

.top-nav .scrool-view {
    height: 110rpx;
    white-space: nowrap;
}

.top-nav .scrool-view .cate {
    color: #777;
    display: inline-block;
    font-size: 34rpx;
    font-weight: 400;
    height: 100rpx;
    line-height: 100rpx;
    margin-left: 48rpx;
}

.top-nav .scrool-view .cate:last-child {
    margin-right: 48rpx;
}

.top-nav .scrool-view .active {
    color: #333;
    font-size: 34rpx;
    font-weight: 600;
    position: relative;
}

.top-nav .scrool-view .active .border {
    height: 6rpx;
    left: 50%;
    position: absolute;
    top: 94rpx;
    transform: translate(-50%,0);
    width: 36rpx;
}

.news-item {
    border-bottom: 1rpx solid #e7eef0;
    margin: 32rpx 32rpx 0;
    padding-bottom: 32rpx;
}

.news-item,.news-item .left {
    display: flex;
}

.news-item .left {
    flex: 1;
    flex-direction: column;
    justify-content: space-around;
}

.news-item .left .title {
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    color: #333;
    display: -webkit-box;
    font-family: PingFangSC-Medium,PingFang SC;
    font-size: 32rpx;
    font-weight: 600;
    line-height: 45rpx;
    overflow: hidden;
}

.news-item .left .time {
    color: #999;
    font-family: PingFangSC-Regular,PingFang SC;
    font-size: 26rpx;
    font-weight: 400;
    line-height: 37rpx;
    margin-top: 24rpx;
}

.news-item .right image {
    border-radius: 20rpx;
    height: 162rpx;
    margin-left: 32rpx;
    width: 252rpx;
}

.red-tag {
    background: #ec5c51;
    border-radius: 6rpx;
    color: #fff;
    font-family: PingFangSC-Regular,PingFang SC;
    font-size: 24rpx;
    font-weight: 400;
    height: 40rpx;
    line-height: 40rpx;
    text-align: center;
    width: 72rpx;
}

.tag-text {
    color: #333;
    font-weight: 600;
    margin-left: 12rpx;
    margin-top: -4rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    width: 604rpx;
}

.news-item .left1 image {
    border-radius: 20rpx;
    height: 162rpx;
    margin-right: 32rpx;
    width: 252rpx;
}

.news-item .right1 {
    display: flex;
    flex: 1;
    flex-direction: column;
    justify-content: space-around;
}

.news-item .right1 .title {
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    color: #333;
    display: -webkit-box;
    font-family: PingFangSC-Medium,PingFang SC;
    font-size: 32rpx;
    font-weight: 600;
    line-height: 45rpx;
    overflow: hidden;
}

.news-item .right1 .time {
    color: #999;
    font-family: PingFangSC-Regular,PingFang SC;
    font-size: 26rpx;
    font-weight: 400;
    line-height: 37rpx;
    margin-top: 24rpx;
}
./app.wxss.img-box {
    margin: 40rpx auto 58rpx;
}

.img-box,.img-box image {
    height: 340rpx;
    width: 438rpx;
}

.query-title {
    color: #333;
    font-family: PingFangSC-Medium,PingFang SC;
    font-size: 36rpx;
    font-weight: 600;
    line-height: 50rpx;
    padding: 0 60rpx;
    text-align: center;
}

.input-box {
    background: #f6f7f9;
    border-radius: 62rpx;
    box-sizing: border-box;
    color: #999;
    font-family: PingFangSC-Regular,PingFang SC;
    font-size: 32rpx;
    font-weight: 400;
    height: 104rpx;
    line-height: 45rpx;
    margin: 32rpx auto 0;
    padding: 0 40rpx;
    width: 670rpx;
}

.btn {
    border-radius: 48rpx;
    color: #fff;
    height: 96rpx;
    line-height: 96rpx;
    margin-top: 40rpx;
    text-align: center;
}

.info {
    color: #999;
    font-family: PingFangSC-Regular,PingFang SC;
    font-size: 28rpx;
    font-weight: 400;
    line-height: 40rpx;
    margin: 0 auto;
    width: 670rpx;
}

.mask {
    background: rgba(0,0,0,.5);
    bottom: 0;
    left: 0;
    position: fixed;
    right: 0;
    top: 120rpx;
    z-index: 2;
}

.mask .bg {
    height: 910rpx;
    height: 1030rpx;
    left: 50%;
    position: absolute;
    top: 50%;
    transform: translate(-50%,-50%);
    width: 646rpx;
}

.mask .bg .result-img {
    bottom: 0;
    height: 910rpx;
    left: 0;
    position: absolute;
    right: 0;
    top: 0;
    width: 646rpx;
}

.mask .bg .result {
    height: 500rpx;
    left: 90rpx;
    position: absolute;
    top: 194rpx;
    z-index: 2;
}

.mask .bg .result view {
    color: #333;
    font-family: PingFangSC-Medium,PingFang SC;
    font-size: 32rpx;
    font-weight: 600;
    line-height: 65rpx;
}

.close {
    bottom: 0;
    display: block;
    height: 63rpx;
    left: 50%;
    position: absolute;
    transform: translate(-50%,0);
    width: 63rpx;
}

.scroll-view {
    height: 500rpx;
    padding-right: 100rpx;
    width: 650rpx;
}

.scroll-view view {
    width: 520rpx;
}
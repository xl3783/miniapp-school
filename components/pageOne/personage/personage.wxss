./app.wxss.top-nav {
    background-color: #fff;
    border-bottom: 1rpx solid #e7eef0;
    height: 100rpx;
}

.top-nav .scrool-view {
    white-space: nowrap;
}

.top-nav .scrool-view .cate {
    color: #777;
    display: inline-block;
    font-size: 34rpx;
    font-weight: 400;
    height: 100rpx;
    line-height: 100rpx;
    margin-left: 48rpx;
}

.top-nav .scrool-view .cate:last-child {
    margin-right: 48rpx;
}

.top-nav .scrool-view .active {
    color: #333;
    font-size: 34rpx;
    font-weight: 600;
    position: relative;
}

.top-nav .scrool-view .active .border {
    height: 6rpx;
    left: 50%;
    position: absolute;
    top: 94rpx;
    transform: translate(-50%,0);
    width: 36rpx;
}

.re-item {
    border-bottom: 1rpx solid #e7eef0;
    display: flex;
    justify-content: space-between;
    margin: 0 32rpx;
    padding: 36rpx 0rpx;
}

.re-item .re-name {
    color: #333;
    flex: 1;
    font-family: PingFangSC-Medium,PingFang SC;
    font-size: 32rpx;
    font-weight: 600;
    height: 44rpx;
    line-height: 44rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.re-item .re-right {
    color: #999;
    display: flex;
    font-family: PingFangSC-Regular,PingFang SC;
    font-size: 26rpx;
    font-weight: 400;
    height: 36rpx;
    line-height: 36rpx;
    margin-top: 4rpx;
}

.re-item .re-right .right-img {
    height: 36rpx;
    margin-left: 6rpx;
    width: 36rpx;
}

.character-box-one {
    background: #fff;
    border-radius: 20rpx;
    box-sizing: border-box;
    height: 260rpx;
    margin: 96rpx auto 0;
    padding: 92rpx 32rpx 32rpx;
    position: relative;
    width: 686rpx;
}

.character-box-one .img-box {
    height: 128rpx;
    left: 50%;
    position: absolute;
    top: 0;
    transform: translate(-50%,-50%);
    width: 128rpx;
}

.character-box-one image {
    border-radius: 50%;
    height: 100%;
    width: 100%;
}

.character-box-one .title {
    display: flex;
    font-size: 32rpx;
    justify-content: center;
    line-height: 45rpx;
    margin-bottom: 12rpx;
}

.character-box-one .name {
    display: flex;
    flex-shrink: 0;
    font-weight: 700;
    margin-right: 20rpx;
}

.character-box-one .occupation {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    word-break: break-all;
}

.character-box-one .name view {
    margin-left: 6rpx;
}

.character-box-one .content {
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    color: #999;
    display: -webkit-box;
    font-size: 26rpx;
    line-height: 39rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
}


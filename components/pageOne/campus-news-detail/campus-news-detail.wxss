.box {
    font-size: 32rpx;
    padding: 32rpx;
}

.box,.title {
    line-height: 50rpx;
}

.title {
    color: #333;
    font-size: 36rpx;
    font-weight: 700;
    margin-bottom: 24rpx;
    text-align: left;
}

.time-hr {
    margin-bottom: 10rpx;
    width: 100%;
}

.time-box,.time-hr {
    border-bottom: 2rpx solid #e7eef0;
}

.time-box {
    display: flex;
    height: 40rpx;
    line-height: 40rpx;
    margin-bottom: 30rpx;
    padding-bottom: 24rpx;
}

.time-box .time-img {
    height: 24rpx!important;
    margin-top: 8rpx;
    width: 24rpx!important;
}

.time-box .time-text {
    color: #999;
    font-size: 28rpx;
    margin-left: 8rpx;
}

.img {
    height: 366rpx;
    width: 100%;
}

.text {
    color: #333;
    font-size: 32rpx;
    font-weight: 400;
    line-height: 50rpx;
    margin-top: 32rpx;
}

.mp-img-box image {
    width: 100%;
}
.flex,.flex-between {
    display: flex;
}

.flex-between {
    justify-content: space-between;
}

.my-live-item {
    display: flex;
    margin-top: 32rpx;
}

.my-live-item .left-box {
    display: flex;
    flex-direction: column;
    justify-content: center;
    text-align: center;
    width: 130rpx;
}

.my-live-item .left-box .time {
    color: #333;
    font-size: 36rpx;
    font-weight: 600;
    line-height: 50rpx;
    margin-bottom: 6rpx;
}

.my-live-item .left-box .time1 {
    color: #999;
    font-size: 30rpx;
    line-height: 42rpx;
}

.my-live-item .right-box {
    background: #fff;
    border-radius: 33rpx;
    box-sizing: border-box;
    height: 261rpx;
    padding: 32rpx;
    width: 588rpx;
}

.my-live-item .right-box .title {
    color: #333;
    font-size: 36rpx;
    font-weight: 600;
    line-height: 50rpx;
    margin-bottom: 12rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.my-live-item .right-box .time-icon {
    height: 22rpx;
    margin-right: 8rpx;
    margin-top: 9rpx;
    width: 22rpx;
}

.my-live-item .right-box .live-time {
    color: #999;
    font-size: 28rpx;
    line-height: 40rpx;
}

.my-live-item .right-box button {
    margin: 0;
    padding: 0;
    width: 212rpx;
}

.my-live-item .right-box .join-btn {
    background: #1487ff;
    border-radius: 36rpx;
    color: #fff;
    font-size: 28rpx;
    height: 64rpx;
    line-height: 64rpx;
    text-align: center;
    width: 212rpx;
}

.my-live-item .right-box .share {
    height: 64rpx;
    width: 64rpx;
}

.look-history {
    bottom: 50rpx;
    left: 50%;
    position: absolute;
    transform: translate(-50%);
}

.look-history,.look-history1 {
    color: #999;
    font-size: 28rpx;
    margin-bottom: 100rpx;
    margin-top: 32rpx;
    text-align: center;
    text-decoration: underline;
}

.mask {
    background-color: rgba(0,0,0,.5);
    position: fixed;
    top: 0;
    z-index: 101;
}

.mask,.mask .sharefff {
    bottom: 0;
    left: 0;
    right: 0;
}

.mask .sharefff {
    background: #fff;
    border-radius: 30rpx 30rpx 0rpx 0rpx;
    height: 475rpx;
    position: absolute;
}

.mask .sharefff .share-title {
    font-weight: 600;
    padding: 54rpx 0 60rpx;
    text-align: center;
}

.mask .sharefff .flex {
    display: flex;
    justify-content: space-around;
}

.mask .sharefff .flex .share-item {
    background: transparent;
    font-size: 30rpx;
    font-weight: 400;
    margin: 0;
    padding: 0;
    text-align: center;
    width: auto;
}

.mask .sharefff .flex .share-item::after {
    border: 0;
}

.mask .sharefff .flex .share-item .share-img {
    height: 88rpx;
    width: 88rpx;
}

.mask .sharefff .cancel-btn {
    border-top: 1rpx solid #e5e5e5;
    font-weight: 600;
    height: 120rpx;
    line-height: 120rpx;
    margin-top: 48rpx;
    text-align: center;
}

.no-live {
    left: 50%;
    position: absolute;
    text-align: center;
    top: 30%;
    transform: translate(-50%,-50%);
    width: 200rpx;
}

.no-live-img {
    display: inline-block;
    height: 136rpx;
    margin-bottom: 32rpx;
    width: 136rpx;
}

.no-live-text {
    color: #cdcdcd;
    font-size: 28rpx;
    text-align: center;
}
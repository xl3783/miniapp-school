.column-box {
    padding: 32rpx 0 0;
}

.column-top {
    display: flex;
    height: 50rpx;
    justify-content: space-between;
    line-height: 50rpx;
    margin: 0rpx 32rpx;
    padding-bottom: 24rpx;
}

.column-title {
    color: #333;
    font-size: 36rpx;
    font-weight: 700;
    line-height: 50rpx;
}

.column-more {
    color: #999;
    display: flex;
    font-size: 26rpx;
    font-weight: 400;
    height: 50prx;
    line-height: 50rpx;
}

.column-more .more-image {
    height: 24rpx;
    margin-top: 17rpx;
    vertical-align: middle;
    width: 24rpx;
}

.scroll-view_H {
    display: flex;
    overflow-x: auto;
    width: 100%;
}

.line-contianer {
    margin-left: 26rpx;
}

.scroll-item {
    background-color: #999;
    border-radius: 20rpx;
    position: relative;
}

.scroll-item:nth-last-child(1) {
    margin-right: 0rpx;
}

.line-contianer:last-child {
    padding-right: 32rpx;
}

.scroll-item .image {
    border-radius: 20rpx;
    display: block;
    height: 100%;
    width: 100%;
}

.scroll-item .scroll-item-title {
    background: rgba(0,0,0,.5);
    border-radius: 0rpx 0rpx 20rpx 20rpx;
    bottom: 0;
    box-sizing: border-box;
    color: #fff;
    font-size: 28rpx;
    height: 64rpx;
    left: 0;
    line-height: 64rpx;
    overflow: hidden;
    padding: 0 20rpx;
    position: absolute;
    right: 0;
    text-align: left;
    text-overflow: ellipsis;
    white-space: nowrap;
    width: 100%;
}

.scroll-item .video_icon {
    height: 80rpx;
    left: 50%;
    position: absolute;
    top: 50%;
    transform: translate(-50%,-50%);
    width: 80rpx;
}
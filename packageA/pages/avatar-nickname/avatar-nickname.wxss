.avatar-wrapper {
    background-color: initial;
    height: 180rpx;
    margin: 100rpx 0 80rpx;
    padding: 0!important;
    width: 180rpx!important;
}

.set-avatar {
    align-items: center;
    background-color: #f4f4f6;
    box-sizing: border-box;
    color: #a5a4a4;
    display: flex;
    flex-direction: column;
    flex-wrap: wrap;
    font-weight: 600;
    justify-content: center;
    letter-spacing: 1rpx;
    padding: 0 40rpx;
}

.avatar,.set-avatar {
    border-radius: 50%;
    height: 180rpx;
    width: 180rpx;
}

.nickname-wrapper,.phone-wrapper {
    align-items: center;
    border-bottom: 1rpx solid #f0f0f0;
    display: flex;
    height: 118rpx;
    line-height: 118rpx;
    margin-bottom: 36rpx;
    padding: 0 40rpx;
}

.nickname-title {
    flex-shrink: 0;
    margin-right: 30rpx;
    width: 110rpx;
}

.nickname-title,.weui-input {
    color: #303133;
    font-size: 32rpx;
    font-weight: 600;
    height: 110rpx;
    line-height: 110rpx;
}

.phone-btn {
    background-color: #fff;
    border: 1rpx solid #1487ff;
    border-radius: 36rpx;
    box-sizing: border-box;
    color: #1487ff;
    font-size: 30rpx;
    font-weight: 600;
    height: 72rpx;
    line-height: 70rpx;
    padding: 0;
    width: 230rpx!important;
}

.bottom {
    bottom: 120rpx;
    left: 50%;
    position: absolute;
    transform: translate(-50%,0);
}

.submit-btn {
    background: #1487ff;
    border-radius: 48rpx;
    color: #fff;
    font-size: 32rpx;
    font-weight: 600;
    height: 96rpx;
    letter-spacing: 1rpx;
    line-height: 96rpx;
    text-align: center;
    width: 578rpx;
}

.avatar_box {
    border-radius: 50%;
    height: 180rpx;
    margin-right: 24rpx;
    overflow: hidden;
    position: relative;
    width: 180rpx;
}

.perfect {
    background-color: rgba(0,0,0,.3);
    bottom: 0;
    color: #fff;
    font-size: 30rpx;
    height: 74rpx;
    line-height: 56rpx;
    position: absolute;
    width: 180rpx;
}
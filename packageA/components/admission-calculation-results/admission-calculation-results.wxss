page {
    padding-bottom: 100rpx;
}

.bg {
    background: linear-gradient(92deg,#ddf5df,#b7eee9);
}

.bg,.bg::after {
    left: 0;
    min-height: 100%;
    position: fixed;
    top: 0;
    width: 100%;
    z-index: -1;
}

.bg::after {
    background: linear-gradient(180deg,#fff,hsla(0,0%,100%,.5));
    content: "";
}

.container {
    background: #fff;
    border-radius: 24rpx;
    box-shadow: 0 2rpx 40rpx 0 rgba(0,0,0,.05);
    box-sizing: border-box;
    margin: 36rpx auto 0;
    padding: 36rpx;
    width: 678rpx;
}

.progress_exhibition {
    box-sizing: border-box;
    display: flex;
}

.progress_box {
    align-items: center;
    display: flex;
    flex-shrink: 0;
    height: 200rpx;
    justify-content: center;
    position: relative;
    width: 220rpx;
}

.progress_info .info_title {
    color: #303133;
    font-size: 36rpx;
    font-weight: 800;
    line-height: 50rpx;
    margin: 20rpx 0 8rpx 20rpx;
}

.progress_info .info_content {
    color: #72757b;
    font-size: 24rpx;
    line-height: 34rpx;
    margin-left: 20rpx;
}

.calculation-item {
    border-top: 1rpx solid #f0f0f0;
    color: #4d4f55;
    font-size: 24rpx;
    line-height: 50rpx;
    padding: 30rpx 0;
}

.calculation-item view text:nth-of-type(n+3) {
    border-left: 2rpx solid #4d4f55;
}

.calculation-item view text {
    display: inline-block;
    line-height: 24rpx;
    padding: 0 8rpx;
}

.calculation-item view {
    box-sizing: border-box;
}

.calculation-open:nth-child(n+2) {
    display: none;
}

.fold,.open {
    background: #f6f9f8;
    border-radius: 28rpx;
    color: #909399;
    font-size: 24rpx;
    height: 56rpx;
    line-height: 56rpx;
    margin: 0 auto;
    text-align: center;
    width: 188rpx;
}

.fold image,.open image {
    height: 30rpx;
    margin-bottom: 4rpx;
    vertical-align: middle;
    width: 30rpx;
}

.ranking-list {
    color: #303133;
    font-size: 28rpx;
    line-height: 80rpx;
    width: 100%;
}

.ranking-title {
    background: #1d201e;
    box-sizing: border-box;
    color: #fff;
    font-size: 28rpx;
    height: 88rpx;
    line-height: 88rpx;
    padding: 0 24rpx;
    width: 100%;
}

.ranking-item,.ranking-title {
    display: flex;
    justify-content: space-between;
}

.ranking-item {
    background: #fff;
    padding: 0 50rpx 0 24rpx;
}

.ranking-item:nth-of-type(even) {
    background: #f6f9f8;
}

.calculation-failed {
    align-items: center;
    display: flex;
    flex-direction: column;
}

.calculation-failed image {
    height: 96rpx;
    margin: 158rpx 0 36rpx;
    width: 96rpx;
}

.calculation-failed view {
    color: silver;
    font-size: 24rpx;
    line-height: 34rpx;
    margin-bottom: 200rpx;
    text-align: center;
    width: 348rpx;
}

.calc-canvas {
    height: 100%;
    width: 100%;
}

.scroll-height {
    height: 280rpx;
}
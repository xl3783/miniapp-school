.top-img {
    display: block;
    height: 310rpx;
    margin: 40rpx auto 60rpx;
    width: 700rpx;
}

.zdzb {
    color: #000;
    display: inline-block;
    font-size: 34rpx;
    font-weight: 600;
    line-height: 48rpx;
    margin-bottom: 20rpx;
    margin-left: 24rpx;
    opacity: .8;
    position: relative;
}

.zdzb::after {
    background: linear-gradient(155deg,#4dc5ea,#00dfb4);
    bottom: -10rpx;
    content: "";
    height: 6rpx;
    left: 40rpx;
    position: absolute;
    right: 40rpx;
}

.list-item {
    border-bottom: 1rpx solid #e9e9e9;
    display: flex;
    justify-content: space-between;
    margin: 0 24rpx;
    padding: 32rpx 0;
}

.list-item .name {
    color: #333;
    font-size: 30rpx;
    font-weight: 500;
    line-height: 42rpx;
    width: 520rpx;
}

.list-item .img {
    height: 36rpx;
    width: 36rpx;
}

.btn {
    background-color: #4da1ff;
    border-radius: 100rpx;
    box-shadow: 0rpx 1rpx 5rpx rgba(80,80,80,.1);
    color: #fff;
    height: 88rpx;
    line-height: 88rpx;
    margin: 60rpx auto;
    opacity: 1;
    padding: 0;
    text-align: center;
    width: 360rpx;
}

.contact-item {
    background: #fff;
    border: 0;
    border-radius: 0;
    display: flex;
    margin: 0!important;
    outline: 0;
    padding: 30rpx;
    width: 100%!important;
}

.contact-item .avatar {
    border-radius: 50%;
    height: 90rpx;
    margin-right: 20rpx;
    width: 90rpx;
}

.contact-item .name {
    font-weight: 500;
    margin-right: 16rpx;
    text-align: left;
}

.contact-item .desc,.contact-item .name {
    color: #333;
    font-size: 30rpx;
    line-height: 42rpx;
}

.contact-item .desc {
    font-weight: 400;
    opacity: .8;
}

.contact-item .text {
    color: #333;
    font-size: 22rpx;
    font-weight: 500;
    line-height: 30rpx;
    opacity: .65;
    text-align: left;
}

.contact-item .ly {
    background: #d0d0d0;
    border-radius: 10rpx;
    color: #fff;
}

.contact-item .ly,.contact-item .zx {
    font-size: 24rpx;
    font-weight: 500;
    height: 46rpx;
    line-height: 46rpx;
    opacity: 1;
    width: 160rpx;
}

.contact-item .zx {
    background: #fff;
    border: 2rpx solid #306ef3;
    border-radius: 10rrpx;
    color: #306ef3;
}

.mask {
    background: rgba(0,0,0,.6);
    bottom: 0;
    left: 0;
    position: fixed;
    right: 0;
    top: 0;
}

.mask .content {
    background: #fff;
    border-radius: 10rpx;
    left: 50%;
    position: absolute;
    top: 50%;
    transform: translate(-50%,-50%);
    width: 620rpx;
}

.mask .content .text {
    color: #fff;
    position: absolute;
    text-align: center;
    top: 85rpx;
    width: 100%;
}

.mask .content .kefu {
    display: block;
    height: 160rpx;
    width: 100%;
}

.mask .content .input-box {
    border: 2rpx solid #d1d1d1;
    border-radius: 5rpx;
    display: flex;
    height: 80rpx;
    line-height: 80rpx;
    margin: 20rpx auto;
    opacity: 1;
    padding: 0 15rpx;
    width: 500rpx;
}

.mask .content .input-box .name {
    color: #6c6c6c;
    font-size: 28rpx;
}

.mask .content .submit-btn {
    background-color: #349bf8;
    border-radius: 70rpx;
    color: #fff;
    font-size: 28rpx;
    height: 70rpx;
    line-height: 70rpx;
    margin: 40rpx auto 30rpx;
    text-align: center;
    width: 260rpx;
}

.mask .content .input-box input {
    flex: 1;
    font-size: 28rpx;
    margin: 18rpx;
    text-align: center;
}

.img-bottom {
    height: 36rpx;
    margin-top: 22rpx;
    width: 36rpx;
}

.picker {
    color: #6c6c6c;
    font-size: 28rpx;
    font-weight: 400;
    line-height: 80rpx;
    text-align: center;
    width: 100%;
}

.c_list {
    height: 300rpx;
    position: relative;
    width: 100%;
}

.c_list_but {
    opacity: 0;
    width: 750rpx!important;
    z-index: 100;
}

.c_list_but,.c_list_v {
    height: 100%;
    left: 0rpx;
    position: absolute;
    top: 0rpx;
}

.c_list_v {
    padding-top: 20rpx;
    width: 100%;
    z-index: 1;
}

.c_list_v_1 {
    align-items: center;
    padding-left: 10rpx;
    padding-right: 10rpx;
}

.c_list_v_1,.c_list_v_2 {
    box-sizing: border-box;
    display: flex;
}

.c_list_v_2 {
    flex-wrap: wrap;
    padding-left: 130rpx;
    width: 100%;
}

.c_v_2 {
    background-color: #f0f0f0;
    border-radius: 10rpx;
    color: #555;
    font-size: 26rpx;
    margin-left: 15rpx;
    margin-top: 20rpx;
    padding: 15rpx 20rpx;
}

.c_avatar {
    background-color: #999;
    width: 120rpx;
}

.c_v {
    background-color: red;
    display: flex;
    flex-direction: column;
    height: 100%;
    justify-content: center;
    margin-left: 10rpx;
    width: 420rpx;
}

.c_name {
    color: #333;
    font-size: 36rpx;
    font-weight: 700;
    height: 100%;
    margin-left: 20rpx;
    width: 400rpx;
}

.c_name,.c_zx {
    align-items: center;
    display: flex;
}

.c_zx {
    border: 1rpx solid #306ef3;
    color: #306ef3;
    height: 46rpx;
    justify-content: center;
    width: 160rpx;
}
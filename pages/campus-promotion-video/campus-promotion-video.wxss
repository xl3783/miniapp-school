.top-nav {
    border-bottom: 1rpx solid #e7eef0;
    height: 100rpx;
}

.top-nav .scrool-view {
    white-space: nowrap;
}

.top-nav .scrool-view .cate {
    color: #777;
    display: inline-block;
    font-size: 34rpx;
    font-weight: 400;
    height: 100rpx;
    line-height: 100rpx;
    margin-left: 48rpx;
}

.top-nav .scrool-view .cate:last-child {
    margin-right: 48rpx;
}

.top-nav .scrool-view .active {
    color: #333;
    font-size: 34rpx;
    font-weight: 600;
    position: relative;
}

.top-nav .scrool-view .active .border {
    height: 6rpx;
    left: 50%;
    position: absolute;
    top: 94rpx;
    transform: translate(-50%,0);
    width: 36rpx;
}

.video-item {
    margin: 32rpx 32rpx 40rpx;
}

.new_video {
    background: rgba(0,0,0,.2);
    border-radius: 20rpx;
    height: 328rpx;
    margin-bottom: 24rpx;
    position: relative;
    width: 100%;
}

.title {
    color: #333;
    font-size: 32rpx;
    font-weight: 400;
    line-height: 45rpx;
}

.new_video .video_icon {
    left: 50%;
    overflow: hidden;
    position: absolute;
    top: 50%;
    transform: translate(-50%,-50%);
    vertical-align: middle;
}

.new_video .video_icon,.new_video .video_icon image {
    height: 96rpx;
    width: 96rpx;
}

.video-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    margin: 32rpx;
    overflow: hidden;
}

.video-grid .video-item {
    margin: 0 0 40rpx;
    width: 328rpx;
}

.video-grid .video-item video {
    background: rgba(0,0,0,.2);
    border-radius: 20rpx;
    height: 328rpx;
    margin: 0 0 24rpx;
    width: 328rpx;
}
.pic-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: start;
    margin-top: 32rpx;
}

.pic-item {
    margin-left: 32rpx;
    width: 328rpx;
}

.pic-item .image-box {
    background-color: #ccc;
    margin-bottom: 24rpx;
    position: relative;
}

.pic-item .image,.pic-item .image-box {
    border-radius: 20rpx;
    height: 208rpx;
    width: 328rpx;
}

.pic-item-title {
    font-size: 32rpx;
    line-height: 45rpx;
    margin-bottom: 40rpx;
}

.image-box .video_icon {
    height: 96rpx;
    left: 50%;
    position: absolute;
    top: 50%;
    transform: translate(-50%,-50%);
    width: 96rpx;
}

.big-pic-item {
    margin: 32rpx 32rpx 40rpx;
}

.big-pic-item .image-box {
    background: rgba(0,0,0,.2);
    border-radius: 20rpx;
    height: 328rpx;
    margin-bottom: 24rpx;
    position: relative;
    width: 100%;
}

.big-pic-item .image {
    border-radius: 20rpx;
    height: 100%;
    width: 100%;
}
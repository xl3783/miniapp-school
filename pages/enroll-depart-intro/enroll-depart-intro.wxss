page {
    background-color: #f6f7f8;
}

.top-nav {
    background-color: #fff;
    border-bottom: 1rpx solid #e7eef0;
    height: 100rpx;
}

.intro image {
    width: 100%!important;
}

.top-nav .scrool-view {
    white-space: nowrap;
}

.top-nav .scrool-view .cate {
    color: #777;
    display: inline-block;
    font-size: 34rpx;
    font-weight: 400;
    height: 100rpx;
    line-height: 100rpx;
    margin-left: 48rpx;
}

.top-nav .scrool-view .cate:last-child {
    margin-right: 48rpx;
}

.top-nav .scrool-view .active {
    color: #333;
    font-size: 34rpx;
    font-weight: 600;
    position: relative;
}

.top-nav .scrool-view .active .border {
    height: 6rpx;
    left: 50%;
    position: absolute;
    top: 94rpx;
    transform: translate(-50%,0);
    width: 36rpx;
}

.intro {
    color: #333;
    font-family: PingFangSC-Regular,PingFang SC;
    font-size: 32rpx;
    font-weight: 400;
    line-height: 50rpx;
    margin: 32rpx;
}

.major-box .item {
    background: #fff;
    box-shadow: 0 16rpx 25rpx 0 rgba(179,196,212,.12);
    display: flex;
    font-size: 32rpx;
    font-weight: 500;
    height: 148rpx;
    line-height: 148rpx;
    margin: 32rpx auto 0;
    width: 686rpx;
}

.major-box .item .name {
    flex: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.major-box .item .item-img {
    height: 32rpx;
    margin-left: 48rpx;
    margin-right: 48rpx;
    margin-top: 58rpx;
    width: 32rpx;
}

.mp-img-box image {
    width: 100%;
}
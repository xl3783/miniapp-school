page {
    display: flex;
    flex-direction: column;
    height: 100vh;
}

.relative-box {
    position: relative;
}

.relative-box .search-container {
    bottom: 0;
    height: calc(100vh - 220rpx);
    left: 0;
    position: absolute;
    right: 0;
    top: 101rpx;
    z-index: 2;
}

.top-search {
    background: #f6f7f9;
    border-radius: 60rpx;
    box-sizing: border-box;
    display: flex;
    flex: 1;
    height: 88rpx;
    margin: 32rpx 32rpx 0;
    padding: 23rpx 40rpx 25rpx;
}

.top-search-text {
    color: #333;
    font-size: 30rpx;
    height: 88rpx;
    line-height: 88rpx;
    margin: 32rpx 0 0;
    padding-right: 32rpx;
}

.top-search .img-search {
    height: 36rpx;
    margin-right: 17rpx;
    margin-top: 3rpx;
    width: 36rpx;
}

.top-search .search-text {
    color: #999;
    line-height: 40rpx;
}

.search-box,.top-search .search-text {
    font-family: PingFangSC-Regular,PingFang SC;
    font-size: 28rpx;
    font-weight: 400;
}

.search-box {
    border-bottom: 1rpx solid #e7eef0;
    color: #333;
    height: 100rpx;
    justify-content: space-around;
    line-height: 100rpx;
    overflow: auto;
    white-space: nowrap;
    width: 100%;
}

.search-box,.view-box {
    display: flex;
}

.search-box .x-item,.search-container {
    flex: 1;
}

.search-container {
    background: rgba(0,0,0,.5);
}

.search-item {
    display: flex;
    padding: 0 24rpx;
    position: relative;
}

.elips {
    max-width: 180rpx;
    overflow: hidden;
    text-overflow: ellipsis;
}

.search-item .iconfont {
    color: #ccc;
    font-size: 20rpx;
    margin-left: 3rpx;
}

.search-item.active,.search-item.active .iconfont {
    color: #1487ff;
}

.subject-top-item {
    border-bottom: 1rpx solid #e7eef0;
    color: #333;
    display: flex;
    font-family: PingFangSC-Medium,PingFang SC;
    font-size: 32rpx;
    font-weight: 600;
    height: 112rpx;
    line-height: 112rpx;
    margin: 0 32rpx;
}

.subject-top-item image {
    height: 48rpx;
    margin-right: 32rpx;
    margin-top: 30rpx;
    width: 48rpx;
}

.subject-item {
    color: #333;
    display: flex;
    font-family: PingFangSC-Medium,PingFang SC;
    font-size: 28rpx;
    font-weight: 500;
    height: 104rpx;
    justify-content: space-between;
    line-height: 104rpx;
    margin: 0 32rpx;
}

.subject-item.active {
    color: #1487ff;
}

.admission-line {
    border-bottom: 13rpx solid #f6f7f9;
    border-top: 13rpx solid #f6f7f9;
    box-sizing: border-box;
    padding: 32rpx;
}

.admission-line .name {
    color: #333;
    font-family: PingFangSC-Medium,PingFang SC;
    font-size: 36rpx;
    font-weight: 600;
    line-height: 50rpx;
    margin-bottom: 8rpx;
}

.score {
    color: #666;
    display: flex;
    flex-wrap: wrap;
    font-family: PingFangSC-Regular,PingFang SC;
    font-size: 28rpx;
    font-weight: 400;
    line-height: 40rpx;
}

.score view {
    margin-right: 30rpx;
    margin-top: 24rpx;
}

.score view:nth-child(3n) {
    text-align: right;
}

.score view:nth-child(3n-1) {
    box-sizing: border-box;
    padding-left: 20rpx;
}

.help_item .title {
    border-bottom: 1rpx solid #e7eef0;
    color: #333;
    display: flex;
    font-family: PingFangSC-Medium,PingFang SC;
    font-size: 32rpx;
    height: 112rpx;
    justify-content: space-between;
    line-height: 112rpx;
    margin: 0 32rpx;
}

.help_item .title .title_1 {
    flex: 1;
    font-weight: 600;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.choose-mask {
    background: rgba(0,0,0,.5);
    bottom: 0;
    left: 0;
    position: fixed;
    right: 0;
    top: 120rpx;
    z-index: 2;
}

.choose-mask .choose-content {
    background: #fff;
    border-radius: 20rpx;
    box-sizing: border-box;
    height: 920rpx;
    left: 50%;
    padding: 0 32rpx 0rpx;
    position: absolute;
    top: 50%;
    transform: translate(-50%,-50%);
    width: 686rpx;
}

.choose-mask .choose-content .search-title {
    color: #000;
    font-size: 34rpx;
    font-weight: 600;
    line-height: 48rpx;
    margin-bottom: 30rpx;
    padding-top: 64rpx;
    text-align: center;
}

.choose-mask .choose-content .select-item {
    border-bottom: 1rpx solid #e7eef0;
    display: flex;
    height: 110rpx;
    justify-content: space-between;
    line-height: 110rpx;
}

.choose-mask .choose-content .select-item .picker {
    display: flex;
}

.choose-mask .choose-content .select-item .picker .picker-text {
    overflow: hidden;
    text-align: right;
    text-overflow: ellipsis;
    white-space: nowrap;
    width: 450rpx;
}

.choose-mask .choose-content .select-item image {
    height: 36rpx;
    margin-top: 39rpx;
    width: 36rpx;
}

.choose-mask .choose-content .subject-box {
    display: flex;
    flex-wrap: wrap;
}

.choose-mask .choose-content .subject-box .subject-item1 {
    background: #f6f7f9;
    border-radius: 20rpx;
    font-size: 32rpx;
    line-height: 45rpx;
    margin-bottom: 20rpx;
    margin-right: 22rpx;
    padding: 30rpx 40rpx;
    text-align: left;
}

.choose-mask .choose-content .subject-box .subject-item1:last-child {
    margin-right: 0;
}

.reset-btn {
    border: 1rpx solid #333;
    border-radius: 48rpx;
    box-sizing: border-box;
    color: #333;
    width: 290rpx;
}

.reset-btn,.sure-btn {
    font-weight: 600;
    height: 96rpx;
    line-height: 96rpx;
    text-align: center;
}

.sure-btn {
    border-radius: 48rpx;
    color: #fff;
    width: 580rpx;
}

.setting-mask {
    background: rgba(0,0,0,.6);
    bottom: 0;
    left: 0;
    position: fixed;
    right: 0;
    top: 0;
    z-index: 1001;
}

.setting-box {
    background: #fff;
    border-radius: 40rpx;
    height: 280rpx;
    left: 50%;
    position: absolute;
    top: 50%;
    transform: translate(-50%,-50%);
    width: 686rpx;
}

.setting-box .title {
    font-size: 34rpx;
    margin: 60rpx auto;
    text-align: center;
}

.setting-box .flex {
    display: flex;
}

.setting-box .flex button {
    background: #fff;
    line-height: 2;
    margin: 0;
    padding: 0;
}

.setting-box .flex .cancel {
    color: #333;
}

.setting-box .flex .sure {
    color: #1487ff;
}
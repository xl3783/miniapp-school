.container {
    width: 100%;
}

.container,.container_top {
    align-items: center;
    display: flex;
    flex-direction: column;
}

.container_top {
    border-bottom: 1rpx solid #e5e5e5;
    padding-bottom: 60rpx;
    padding-top: 100rpx;
    width: 590rpx;
}

.container_top_icon {
    height: 156rpx;
    width: 190rpx;
}

.container_top_title {
    color: #333;
    font-family: PingFangSC-Medium,PingFang SC;
    font-size: 36rpx;
    font-weight: 700;
    margin-top: 20rpx;
}

.container_line {
    justify-content: space-between;
    margin-top: 60rpx;
    width: 590rpx;
}

.container_line,.container_line_left {
    align-items: center;
    display: flex;
}

.container_line_left image {
    height: 32rpx;
    width: 32rpx;
}

.container_line_left view {
    color: #303133;
    font-family: PingFangSC-Medium,PingFang SC;
    font-size: 32rpx;
    font-weight: 500;
    margin-left: 10rpx;
}

.container_line_right {
    color: #303133;
    font-size: 32rpx;
}

.container_line_right,.container_site {
    font-family: PingFangSC-Regular,PingFang SC;
    font-weight: 400;
}

.container_site {
    color: #909399;
    font-size: 28rpx;
    margin-top: 26rpx;
    text-align: justify;
    width: 100%;
    width: 590rpx;
}

.container_img {
    grid-gap: 20rpx;
    display: grid;
    grid-template-columns: repeat(4,135rpx);
    margin-top: 16rpx;
    width: 590rpx;
}

.container_img image {
    background-color: #f0f0f0;
    border-radius: 5rpx;
    height: 128rpx;
    width: 128rpx;
}

.text_content {
    border-bottom: 1rpx solid #e5e5e5;
    color: #909399;
    font-family: PingFangSC-Regular,PingFang SC;
    font-size: 28rpx;
    font-weight: 400;
    height: 70rpx;
    margin-top: 26rpx;
    padding-bottom: 20rpx;
    width: 590rpx;
}

.add {
    color: #303133;
    font-family: PingFangSC-Medium,PingFang SC;
    font-size: 32rpx;
    font-weight: 700;
    height: 100rpx;
    margin-top: 30rpx;
}

.add,.alert {
    align-items: center;
    display: flex;
    justify-content: center;
    width: 100%;
}

.alert {
    background: rgba(0,0,0,.5);
    height: 101vh;
    position: fixed;
    top: 0;
}

.alert_con {
    background-color: #fff;
    border-radius: 16rpx;
    width: 640rpx;
}

.alert_content {
    border-bottom: 1rpx solid rgba(0,0,0,.1);
    box-sizing: border-box;
    padding: 48rpx 48rpx 33rpx;
    width: 100%;
}

.alert_but {
    width: 100%;
}

.alert_but,.alert_but view {
    display: flex;
}

.alert_but view {
    align-items: center;
    box-sizing: border-box;
    font-size: 34rpx;
    height: 109rpx;
    justify-content: center;
    width: 50%;
}

.alert_con_text {
    color: #333;
    font-size: 34rpx;
    height: 144rpx;
    width: 100%;
}

.alert_con_img {
    align-items: flex-end;
    display: flex;
    height: 120rpx;
    margin-top: 38rpx;
    width: 100%;
}

.defalut_icon_add {
    border-radius: 5rpx;
    height: 94rpx;
    width: 94rpx;
}

.alert_line {
    align-items: flex-end;
    display: flex;
    height: 120rpx;
    justify-content: center;
    position: relative;
    width: 120rpx;
}

.alert_line_del {
    height: 30rpx;
    position: absolute;
    right: 0rpx;
    top: 15rpx;
    width: 30rpx;
}

.alert_user {
    border-bottom: 1rpx solid #ddd;
    font-size: 34rpx;
    height: 60rpx;
    margin-bottom: 20rpx;
    width: 100%;
}
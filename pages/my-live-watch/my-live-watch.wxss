page {
    background-color: #444;
    overflow: hidden;
}

.center-ppt-box {
    margin-top: 450rpx;
    position: relative;
}

.center-ppt,.center-ppt-box {
    height: 487rpx;
    width: 100%;
}

.center-ppt-box .icon {
    bottom: 24rpx;
    height: 80rpx;
    position: absolute;
    right: 36rpx;
    width: 80rpx;
    z-index: 11;
}

.top-bar {
    display: flex;
    overflow: hidden;
    position: absolute;
    width: 70%;
}

.top-bar .left-arrow {
    display: inline-block;
    height: 64rpx;
    margin-left: 20rpx;
    width: 64rpx;
}

.top-bar .tabname {
    color: #fff;
    font-size: 32rpx;
}

.live-status {
    background: rgba(0,0,0,.25);
    border-radius: 32rpx;
    display: inline-block;
    height: 54rpx;
    left: 32rpx;
    padding-right: 16rpx;
    position: absolute;
    top: 200rpx;
}

.live-back {
    background: rgba(0,0,0,.5);
    border-radius: 24rpx;
    color: #fff;
    font-size: 24rpx;
    height: 48rpx;
    line-height: 48rpx;
    padding: 0;
    text-align: center;
    width: 96rpx;
}

.live-status .time-count {
    background: #1cd894;
    border-radius: 21rpx;
    color: #fff;
    float: left;
    font-size: 24rpx;
    height: 42rpx;
    line-height: 42rpx;
    margin-left: 6rpx;
    margin-right: 14rpx;
    margin-top: 6rpx;
    padding: 0 10rpx;
}

.live-status .number {
    color: #fff;
    float: left;
    font-size: 24rpx;
    line-height: 54rpx;
}

.start-live {
    background: #1487ff;
    border-radius: 48rpx;
    bottom: 70rpx;
    color: #fff;
    font-size: 32rpx;
    height: 96rpx;
    left: 50%;
    line-height: 96rpx;
    position: absolute;
    text-align: center;
    transform: translate(-50%);
    width: 480rpx;
}

.enter-box {
    bottom: 440rpx;
}

.comment-box,.enter-box {
    padding-left: 32rpx;
    position: absolute;
}

.comment-box {
    bottom: 140rpx;
    max-height: 400rpx;
}

.comment-item {
    border-radius: 32rpx;
    box-sizing: border-box;
    display: inline-block;
    font-size: 28rpx;
    line-height: 40rpx;
    margin-bottom: 16rpx;
    max-width: 520rpx;
    padding: 12rpx 16rpx;
}

.comment-item,.input-box {
    background: rgba(0,0,0,.3);
    color: #fff;
}

.input-box {
    border-radius: 40rpx;
    bottom: 36rpx;
    height: 80rpx;
    left: 32rpx;
    position: absolute;
    width: 520rpx;
}

.input-box input {
    color: #fff;
    margin: 20rpx 16rpx;
}

.input-box .input-end {
    color: #fff;
    font-size: 28rpx;
    line-height: 80rpx;
    text-align: center;
}

.right-operation {
    bottom: 12rpx;
    display: flex;
    flex-direction: column;
    position: absolute;
    right: 32rpx;
}

.right-operation .img {
    height: 80rpx;
    margin-bottom: 24rpx;
    width: 80rpx;
}

.mask {
    background: rgba(0,0,0,.5);
    bottom: 0;
    left: 0;
    position: fixed;
    right: 0;
    top: 0;
    z-index: 100000;
}

.mask .bgfff1 {
    background: #fff;
    border-radius: 20px;
    bottom: 140rpx;
    box-sizing: border-box;
    left: 257rpx;
    padding: 36rpx 42rpx;
    position: absolute;
    width: 353rpx;
}

.mask .bgfff1 .content-item {
    display: flex;
    font-size: 32rpx;
    line-height: 72rpx;
    margin-bottom: 36rpx;
}

.mask .bgfff1 .content-item:last-child {
    margin-bottom: 0;
}

.mask .bgfff1 .content-item image {
    height: 72rpx;
    margin-right: 33rpx;
    width: 72rpx;
}

.mask .bgfff {
    background: #fff;
    bottom: 0;
    box-sizing: border-box;
    height: 820rpx;
    left: 0;
    padding-bottom: 40px;
    position: absolute;
    right: 0;
}

.func-name {
    border-bottom: 1rpx solid #e7eef0;
    color: #333;
    font-size: 36rpx;
    height: 124rpx;
    line-height: 124rpx;
    text-align: center;
}

.icon-close {
    height: 64rpx;
    position: absolute;
    right: 24rpx;
    top: 24rpx;
    width: 64rpx;
}

.mask .sharefff {
    background: #fff;
    border-radius: 30rpx 30rpx 0rpx 0rpx;
    bottom: 0;
    height: 475rpx;
    left: 0;
    position: absolute;
    right: 0;
}

.mask .sharefff .share-title {
    padding: 54rpx 0 60rpx;
    text-align: center;
}

.mask .sharefff .flex {
    display: flex;
    justify-content: space-around;
}

.mask .sharefff .flex .share-item {
    background: transparent;
    font-size: 30rpx;
    font-weight: 400;
    margin: 0;
    padding: 0;
    text-align: center;
    width: auto;
}

.mask .sharefff .flex .share-item::after {
    border: 0;
}

.mask .sharefff .flex .share-item .share-img {
    height: 88rpx;
    width: 88rpx;
}

.mask .sharefff .cancel-btn {
    border-top: 1rpx solid #e5e5e5;
    height: 120rpx;
    line-height: 120rpx;
    margin-top: 48rpx;
    text-align: center;
}

.login-mask {
    background-color: rgba(0,0,0,.5);
    bottom: 0;
    left: 0;
    position: fixed;
    right: 0;
    top: 180rpx;
    z-index: 10000;
}

.login-content {
    align-items: center;
    background-color: #fff;
    border-radius: 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    left: 50%;
    position: absolute;
    top: 40%;
    transform: translate(-50%,-50%);
    width: 678rpx;
}

.login-content .login-img {
    height: 240rpx;
    margin-bottom: 42rpx;
    margin-top: 48rpx;
    width: 240rpx;
}

.login-content .login-text {
    font-size: 32rpx;
}

button {
    padding: 0!important;
}

.login-content .login-btn {
    background: #1487ff;
    border-radius: 48rpx;
    color: #fff;
    font-size: 32rpx;
    font-weight: 400;
    height: 96rpx;
    line-height: 96rpx;
    margin: 48rpx 0;
    width: 368rpx;
}

.max-video {
    bottom: 0;
    height: 100%;
    left: 0;
    top: 0;
    width: 100%;
}

.max-video,.min-video {
    color: #fff;
    display: flex;
    flex-direction: column;
    justify-content: center;
    position: absolute;
    right: 0;
    text-align: center;
}

.min-video {
    height: 188rpx;
    top: 450rpx;
    width: 132rpx;
    z-index: 103;
}

.bootomplay-container {
    background: rgba(0,0,0,.5);
    bottom: 0;
    box-sizing: border-box;
    color: #fff;
    display: flex;
    font-size: 20rpx;
    height: 72rpx;
    left: 0;
    line-height: 72rpx;
    padding: 0 30rpx;
    position: absolute;
    right: 0;
}

.bootomplay-container .playicon {
    height: 40rpx;
    margin-right: 30rpx;
    margin-top: 15rpx;
    width: 40rpx;
}

.bootomplay-container .slider {
    flex: 1;
    margin: 20rpx;
}

.max-player {
    bottom: 0;
    height: 100vh;
    left: 0;
    top: 0;
    width: 100vw;
}

.max-player,.min-player {
    position: absolute;
    right: 0;
}

.min-player {
    height: 188rpx;
    top: 450rpx;
    width: 132rpx;
    z-index: 103;
}
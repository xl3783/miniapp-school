page {
    background: #fff;
}

.top-search-box {
    background: #fff;
    box-sizing: border-box;
    padding: 32rpx 32rpx 0;
}

.top-search {
    background: #f6f7f9;
    border-radius: 60rpx;
    box-sizing: border-box;
    display: flex;
    height: 88rpx;
    padding: 23rpx 40rpx 25rpx;
}

.top-search .img-search {
    height: 36rpx;
    margin-right: 17rpx;
    margin-top: 3rpx;
    width: 36rpx;
}

.top-search .search-text {
    color: #999;
    flex: 1;
    font-family: PingFangSC-Regular,PingFang SC;
    font-size: 28rpx;
    font-weight: 400;
    line-height: 40rpx;
}

.bg {
    margin: 32rpx;
}

.bg .name {
    color: #333;
    font-family: PingFangSC-Medium,PingFang SC;
    font-size: 32rpx;
    font-weight: 600;
    line-height: 45rpx;
}

.bg .tag-box {
    display: flex;
    flex-wrap: wrap;
}

.bg .tag-box .tag {
    background: #f6f7f9;
    border-radius: 20rpx;
    color: #666;
    font-family: PingFangSC-Regular,PingFang SC;
    font-size: 26rpx;
    font-weight: 400;
    height: 64rpx;
    line-height: 64rpx;
    margin-right: 24rpx;
    margin-top: 25rpx;
    padding: 0 32rpx;
    text-align: center;
}
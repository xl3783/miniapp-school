.msg_mask {
    background: rgba(0,0,0,.5);
    height: 100vh;
    left: 0;
    top: 0;
    width: 100%;
}

.msg_box,.msg_mask {
    position: fixed;
    z-index: 3;
}

.msg_box {
    background: #fff;
    border-radius: 20rpx;
    box-sizing: border-box;
    left: 50%;
    padding: 120rpx 32rpx 100rpx;
    top: 50%;
    transform: translate(-50%,-50%);
    width: 670rpx;
}

.msg_close {
    position: absolute;
    right: 32rpx;
    top: 32rpx;
    width: 64rpx;
}

.msg_list_box {
    max-height: 55vh;
    min-height: 40vh;
    overflow: auto;
}

.msg_list {
    align-items: start;
    display: flex;
    margin-bottom: 56rpx;
}

.msg_list .avatar {
    border-radius: 50%;
    flex-shrink: 0;
    height: 96rpx;
    margin-right: 36rpx;
    width: 96rpx;
}

.msg_list .msg_name {
    font-weight: 600;
    margin-right: 12rpx;
}

.msg_list .msg_cnt,.msg_list .msg_name {
    color: #303133;
    font-size: 32rpx;
    line-height: 46rpx;
}

.msg_list .msg_cnt {
    font-weight: 400;
}

.msg_list .msg_time {
    color: #909399;
    font-size: 26rpx;
    font-weight: 400;
    line-height: 36rpx;
    margin-top: 12rpx;
}

.praise_none {
    align-items: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
    min-height: 26vh;
}

.praise_img {
    margin-bottom: 32rpx;
    width: 136rpx;
}

.praise_none text {
    color: #cdcdcd;
    font-size: 28rpx;
    line-height: 40rpx;
}

.load_all {
    bottom: 40rpx;
    color: silver;
    font-size: 26rpx;
    left: 50%;
    line-height: 36rpx;
    position: absolute;
    transform: translateX(-50%);
}

.load_all::before {
    background-color: silver;
    left: -40rpx;
}

.load_all::after,.load_all::before {
    content: "";
    height: 1rpx;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 30rpx;
}

.load_all::after {
    background-color: #bfbfbf;
    right: -40rpx;
}

.container {
    height: 100%;
    position: relative;
    width: 100%;
}

.canvas {
    height: 100vh;
    position: fixed;
    width: 100%;
    z-index: 1;
}

.generate_picture {
    backdrop-filter: blur(10rpx);
    background: #30384f;
    border-radius: 8rpx;
    bottom: 50rpx;
    box-sizing: border-box;
    color: #fff;
    font-size: 32rpx;
    font-weight: 600;
    height: 84rpx;
    line-height: 84rpx;
    position: fixed;
    right: 40rpx;
    text-align: center;
    width: 89%;
    z-index: 100;
}

.blessing {
    bottom: 148rpx;
    left: 50%;
    position: fixed;
    transform: translateX(-50%);
    width: 670rpx;
    z-index: 2;
}

.praise {
    align-items: center;
    backdrop-filter: blur(10rpx);
    background: rgba(0,0,0,.3);
    border-radius: 42rpx;
    display: flex;
    height: 78rpx;
    justify-content: center;
    margin: 0 auto 72rpx;
    width: 620rpx;
}

.praise image {
    height: auto;
    width: 24rpx;
}

.praise_text {
    color: #fff;
    font-size: 32rpx;
    font-weight: 600;
    line-height: 46rpx;
    margin: 0 24rpx;
}

.praise_text text {
    margin: 0 6rpx;
}

.see_share {
    align-items: center;
    display: flex;
    gap: 20rpx;
    justify-content: space-between;
    width: 100%;
}

.see {
    background: #ffc447;
    border: 2rpx solid hsla(0,0%,100%,.5);
    border-radius: 8rpx;
    margin-right: 54rpx;
    width: 308rpx;
}

.see,.share {
    box-sizing: border-box;
    color: #fff;
    flex: 1;
    font-size: 32rpx;
    font-weight: 600;
    height: 84rpx;
    line-height: 84rpx;
    padding: 0;
    text-align: center;
}

.share {
    background: #30384f;
    border: 2rpx solid hsla(223,9%,46%,.5);
    border-radius: 8rpx;
}

.popup_mask {
    animation: boxAnimation .5s ease;
    background: rgba(0,0,0,.5);
    height: 100vh;
    left: 0;
    top: 0;
    width: 100%;
}

.popup,.popup_mask {
    position: fixed;
    z-index: 3;
}

.popup {
    background: #fff;
    border-radius: 16rpx;
    height: 544rpx;
    left: 50%;
    top: 480rpx;
    transform: translateX(-50%);
    width: 640rpx;
}

textarea {
    box-sizing: border-box;
    color: #000;
    height: 432rpx;
    padding: 60rpx 48rpx;
    width: 100%;
}

.textarea_text,textarea {
    font-size: 34rpx;
    line-height: 48rpx;
}

.textarea_text {
    color: rgba(0,0,0,.3);
}

.popup_btn {
    border-top: 2rpx solid rgba(0,0,0,.1);
    display: flex;
    height: 110rpx;
}

.popup_btn view {
    flex: 1;
    font-size: 34rpx;
    font-weight: 600;
    letter-spacing: 2rpx;
    line-height: 110rpx;
    text-align: center;
}

.cancel {
    color: #000;
}

.cancel,.sure {
    border-right: 2rpx solid rgba(0,0,0,.1);
}

.sure {
    color: #576b95;
}
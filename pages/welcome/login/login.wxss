.container {
    align-items: center;
    display: flex;
    flex-direction: column;
    width: 100%;
}

.container_title {
    color: #192548;
    font-family: PingFangSC-Medium,PingFang SC;
    font-size: 42rpx;
    font-weight: 500;
    letter-spacing: 3rpx;
    line-height: 59rpx;
    margin-top: 132rpx;
}

.container_school {
    height: 95rpx;
    margin-top: 26rpx;
    width: 95rpx;
}

.container_school_name {
    color: #192548;
    font-family: PingFangSC-Regular,PingFang SC;
    font-size: 36rpx;
    font-weight: 400;
    line-height: 50rpx;
    margin-bottom: 66rpx;
    margin-top: 22rpx;
}

.container_input {
    align-items: center;
    background-color: #f6f6f6;
    border-radius: 56rpx;
    box-sizing: border-box;
    display: flex;
    height: 112rpx;
    margin-bottom: 54rpx;
    padding-left: 36rpx;
    padding-right: 36rpx;
    width: 578rpx;
}

.container_input_icon {
    height: 36rpx;
    width: 36rpx;
}

.container_input_hr {
    border-right: 1rpx solid #d8d8d8;
    box-sizing: border-box;
    height: 20rpx;
    margin-right: 30rpx;
    width: 30rpx;
}

.container_input input {
    width: calc(100% - 106rpx);
}

.button_submit {
    align-items: center;
    background: #3d3cee;
    border-radius: 56rpx;
    color: #fff;
    display: flex;
    font-size: 36rpx;
    height: 112rpx;
    justify-content: center;
    margin-top: 324rpx;
    width: 578rpx;
}
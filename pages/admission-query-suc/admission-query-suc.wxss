.bg {
    left: 50%;
    min-height: 80vh;
    position: absolute;
    transform: translateX(-50%);
    width: 750rpx;
}

.bg .result-img {
    display: block;
    width: 100%;
}

.result {
    left: 50%;
    position: absolute;
    top: 100rpx;
    transform: translateX(-50%);
    width: 80%;
    z-index: 2;
}

.result view {
    font-family: PingFangSC-Medium,PingFang SC;
}

.close {
    bottom: 0;
    display: block;
    height: 63rpx;
    left: 50%;
    position: absolute;
    transform: translate(-50%,0);
    width: 63rpx;
}

.scroll-view {
    height: 500rpx;
    padding-right: 100rpx;
    width: 650rpx;
}

.scroll-view view {
    width: 520rpx;
}

.blessing {
    bottom: 148rpx;
    left: 50%;
    position: absolute;
    transform: translateX(-50%);
    width: 670rpx;
    z-index: 2;
}

.praise {
    align-items: center;
    backdrop-filter: blur(10rpx);
    background: rgba(0,0,0,.3);
    border-radius: 42rpx;
    display: flex;
    height: 78rpx;
    justify-content: center;
    margin: 0 auto 72rpx;
    width: 490rpx;
}

.praise image {
    height: auto;
    width: 24rpx;
}

.praise_text {
    color: #fff;
    font-size: 32rpx;
    font-weight: 600;
    line-height: 46rpx;
    margin: 0 24rpx;
}

.praise_text text {
    margin: 0 6rpx;
}

.see_share {
    align-items: center;
    display: flex;
    justify-content: space-between;
}

.see {
    background: #ffc447;
    border: 2rpx solid hsla(0,0%,100%,.5);
    border-radius: 8rpx;
    flex-shrink: 0;
    margin-right: 54rpx;
    width: 308rpx;
}

.see,.share {
    box-sizing: border-box;
    color: #fff;
    font-size: 32rpx;
    font-weight: 600;
    height: 84rpx;
    line-height: 84rpx;
    padding: 0;
    text-align: center;
}

.share {
    background: #30384f;
    border: 2rpx solid hsla(223,9%,46%,.5);
    border-radius: 8rpx;
    width: 308rpx!important;
}

.msg_mask {
    background: rgba(0,0,0,.5);
    height: 100vh;
    left: 0;
    top: 0;
    width: 100%;
}

.msg_box,.msg_mask {
    position: fixed;
    z-index: 3;
}

.msg_box {
    background: #fff;
    border-radius: 20rpx;
    box-sizing: border-box;
    left: 50%;
    padding: 120rpx 32rpx 100rpx;
    top: 50%;
    transform: translate(-50%,-50%);
    width: 670rpx;
}

.msg_list_box {
    max-height: 55vh;
    min-height: 40vh;
    overflow: auto;
}

.msg_close {
    position: absolute;
    right: 32rpx;
    top: 32rpx;
    width: 64rpx;
}

.msg_list {
    align-items: start;
    display: flex;
    margin-bottom: 56rpx;
}

.msg_list .avatar {
    border-radius: 50%;
    flex-shrink: 0;
    height: 96rpx;
    margin-right: 36rpx;
    width: 96rpx;
}

.msg_list .msg_name {
    font-weight: 600;
    margin-right: 12rpx;
}

.msg_list .msg_cnt,.msg_list .msg_name {
    color: #303133;
    font-size: 32rpx;
    line-height: 46rpx;
}

.msg_list .msg_cnt {
    font-weight: 400;
}

.msg_list .msg_time {
    color: #909399;
    font-size: 26rpx;
    font-weight: 400;
    line-height: 36rpx;
    margin-top: 12rpx;
}

.praise_none {
    align-items: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
    min-height: 26vh;
}

.praise_img {
    margin-bottom: 32rpx;
    width: 136rpx;
}

.praise_none text {
    color: #cdcdcd;
    font-size: 28rpx;
    line-height: 40rpx;
}

.load_all {
    bottom: 40rpx;
    color: silver;
    font-size: 26rpx;
    left: 50%;
    line-height: 36rpx;
    position: absolute;
    transform: translateX(-50%);
}

.load_all::before {
    left: -40rpx;
}

.load_all::after,.load_all::before {
    background-color: silver;
    content: "";
    height: 1rpx;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 30rpx;
}

.load_all::after {
    right: -40rpx;
}

.ipadBlessing {
    bottom: 54px!important;
    width: 320px!important;
}

.ipadBlessing .praise {
    backdrop-filter: blur(5px);
    border-radius: 21px;
    height: 39px;
    margin: 0 auto 30px;
    width: 245px;
}

.ipadBlessing .praise image {
    height: auto;
    width: 12px;
}

.ipadBlessing .praise_text {
    color: #fff;
    font-size: 16px;
    font-weight: 600;
    line-height: 23px;
    margin: 0 12px;
}

.ipadBlessing .praise_text text {
    margin: 0 3px;
}

.ipadBlessing .see {
    border: 1px solid hsla(0,0%,100%,.5);
    border-radius: 4px;
    margin-right: 20px;
    width: 154px;
}

.ipadBlessing .see,.ipadBlessing .share {
    font-size: 16px;
    height: 42px;
    line-height: 42px;
}

.ipadBlessing .share {
    border: 1px solid hsla(223,9%,46%,.5);
    border-radius: 4px;
    width: 154px!important;
}

.ipadBg .msg_mask {
    background: rgba(0,0,0,.5);
    height: 100%;
    left: 0;
    position: absolute;
    top: 0;
    width: 100%;
    z-index: 2;
}

.ipadBg .msg_box {
    background: #fff;
    border-radius: 10px;
    padding: 60px 16px 50px;
    width: 320px;
    z-index: 2;
}

.ipadBg .msg_list_box {
    max-height: 280px;
    min-height: 230px;
    overflow: auto;
}

.ipadBg .msg_close {
    right: 16px;
    top: 16px;
    width: 32px;
}

.ipadBg .msg_list {
    margin-bottom: 28px;
}

.ipadBg .msg_list .avatar {
    margin-right: 18px;
    width: 48px;
}

.ipadBg .msg_list .msg_name {
    margin-right: 6px;
}

.ipadBg .msg_list .msg_cnt,.ipadBg .msg_list .msg_name {
    font-size: 16px;
    line-height: 23px;
}

.ipadBg .msg_list .msg_time {
    font-size: 13px;
    line-height: 18px;
    margin-top: 6px;
}

.ipadBg .praise_none {
    min-height: 120px;
}

.ipadBg .praise_img {
    margin-bottom: 16px;
    width: 78px;
}

.ipadBg .praise_none text {
    font-size: 14px;
    line-height: 20px;
}

.ipadBg .load_all {
    bottom: 20px;
    font-size: 13px;
    line-height: 18px;
}

.ipadBg .load_all::before {
    height: 1px;
    left: -20px;
    width: 15px;
}

.ipadBg .load_all::after {
    height: 1px;
    right: -20px;
    width: 15px;
}

.generate_picture {
    backdrop-filter: blur(10rpx);
    background: #30384f;
    border-radius: 8rpx;
    bottom: 30rpx;
    box-sizing: border-box;
    color: #fff;
    font-size: 32rpx;
    font-weight: 600;
    height: 84rpx;
    line-height: 84rpx;
    position: absolute;
    right: 40rpx;
    text-align: center;
    width: 89%;
    z-index: 2;
}
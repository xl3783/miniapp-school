.container {
    box-sizing: border-box;
    padding-left: 32rpx;
    padding-right: 32rpx;
}

.container_lines {
    margin-top: 32rpx;
    width: 100%;
}

.container_title {
    color: #303133;
    font-family: PingFangSC-Medium,PingFang SC;
    font-size: 36rpx;
    font-weight: 700;
    height: 50rpx;
}

.container_info,.container_title {
    align-items: center;
    display: flex;
    width: 100%;
}

.container_info {
    border-bottom: 1rpx solid #e5e5e5;
    height: 96rpx;
    margin-top: 32rpx;
    padding-bottom: 40rpx;
}

.container_info,.info_left {
    justify-content: space-between;
}

.info_left {
    display: flex;
    flex-direction: column;
    height: 100%;
    width: calc(100% - 100rpx);
}

.info_right {
    background-color: #f0f0f0;
    border-radius: 4rpx;
    height: 96rpx;
    width: 96rpx;
}

.info_left_time {
    color: #303133;
    font-family: PingFangSC-Medium,PingFang SC;
    font-size: 32rpx;
    font-weight: 700;
    width: 100%;
}

.info_left_text {
    color: #909399;
    font-family: PingFangSC-Regular,PingFang SC;
    font-size: 28rpx;
    font-weight: 400;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    width: 100%;
}
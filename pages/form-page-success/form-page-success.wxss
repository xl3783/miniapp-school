.form-suc {
    align-items: center;
    display: flex;
    flex-direction: column;
}

.form-suc-img {
    height: 246rpx;
    margin-top: 96rpx;
    width: 246rpx;
}

.suc-text {
    color: #333;
    font-size: 36rpx;
    font-weight: 600;
    margin-top: 64rpx;
}

.suc-info {
    color: #666;
    font-size: 32rpx;
    line-height: 45rpx;
    margin-top: 24rpx;
}

.blue-text {
    display: flex;
    margin-top: 24rpx;
}

.border {
    background: #e8e8e8;
    height: 36rpx;
    margin: 0 56rpx;
    width: 2rpx;
}

.one-text,.share-text {
    background-color: transparent;
    border: 0;
    color: #1487ff;
    display: inline-block;
    font-size: 32rpx;
    font-weight: 400;
    line-height: 1!important;
    padding: 0!important;
    text-decoration: underline;
    width: auto!important;
}

button::after {
    border: 0!important;
}